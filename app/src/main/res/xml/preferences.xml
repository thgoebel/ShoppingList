<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:layout="@layout/toolbar_settings">

        <Preference
            android:key="FILE_LOCATION"
            android:icon="@drawable/ic_sd_storage_24dp"
            android:inputType="text"
            android:title="@string/settings_file_location" />

        <ListPreference
            android:key="THEME"
            android:icon="@drawable/ic_color_lens_24dp"
            android:title="@string/settings_theme"
            android:entries="@array/settings_theme_entries"
            android:entryValues="@array/settings_theme_entry_values" />

    </PreferenceCategory>

</PreferenceScreen>